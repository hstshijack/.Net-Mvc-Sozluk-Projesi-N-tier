@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "ContentByHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <span style="margin-bottom:10px;" class="badge bg-warning ">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</span>
            
          <div class="card">
              <div class="card-body">
                  <span class="card-title">@item.Writer.Name @item.Writer.SurName</span>
                   <br />
                  <span>@item.Value</span>
              </div>
          </div>
               
            
                
        </div>
    </div>
}