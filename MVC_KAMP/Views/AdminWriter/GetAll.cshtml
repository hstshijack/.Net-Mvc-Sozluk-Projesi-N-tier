@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    @foreach (var item in Model)
    {
    <div class="card" style="width: 23rem; margin-left:20px;">
        
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <h5 class="card-title">@item.Name @item.SurName</h5>
            <div class="row">
                <p>Hakkında : @item.About</p>
            </div>
            <div class="row">
                <p>Mail : @item.Mail</p>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <a href="#" class="btn btn-success"><i class="fas fa-comment"></i> Başlıklar</a>
                </div>
                <div class="col-sm-7">
                    <a href="/AdminWriter/Update/@item.WriterId" class="btn btn-primary"><i class="fas fa-user"></i> Profili Düzenle</a>
                </div>
       
            </div>         
         
        </div>
    </div>
    }
</div>










