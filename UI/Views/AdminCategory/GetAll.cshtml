@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr class="align-bottom">
                    <th>#</th>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td class="col-lg-3" id="islemler">
                            <a href="/AdminCategory/Delete/@item.CategoryId"type="button" class="btn btn-danger"> <i class="fas fa-trash-alt"></i></a>
                            <a href="/AdminCategory/Update/@item.CategoryId" type="button" class="btn btn-warning" onclick="location.href='#'"><i class="fas fa-edit"></i></a>
                            <button type="button" class="btn btn-sm btn-success" onclick="location.href='#'">Başlıklar</button>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
    <a href="/AdminCategory/Create" id="btn-add-category"class="btn btn-sm btn-info"><i id="i-add-category" class="fas fa-plus"></i> Kategori Ekle</a> 



</body>
</html>

