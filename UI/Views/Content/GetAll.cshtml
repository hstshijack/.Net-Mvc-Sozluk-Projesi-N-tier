@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Content>
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <span style="margin-bottom:10px;" class="badge bg-warning ">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</span>
            <span style="margin-bottom:10px;" class="badge bg-danger ">@item.Heading.Name</span>
            <div class="card">

                <div class="card-body">
                    <span class="card-title">@item.Writer.Name @item.Writer.SurName</span>
                    <br />

                    <span>@item.Value</span>
                </div>
            </div>



        </div>
    </div>
}
@Html.PagedListPager((IPagedList)Model, p => Url.Action("GetAll", new {p}),new PagedListRenderOptions
{

    LiElementClasses=new List<string>
    {
        {"page-link"}
    }

})

